# Определение массива строк
PACKAGE := book.chapter3.
BINPATH := bin
COMPILE := javac -encoding utf8 -d $(BINPATH)
RUN := java -classpath $(BINPATH) $(PACKAGE)


# Exercise 1
TestPrint:
	$(COMPILE) $@.java ..\chapter2\Print.java
	$(RUN)$@

# Exercise 2, 3
CombineFloat:
	$(COMPILE) $@.java
	$(RUN)$@

