# Exercise 11, 12, 13
Shift:
	$(COMPILE) $@.java
	$(RUN)$@

# Exercise 14
StringEquals:
	$(COMPILE) $@.java
	$(RUN)$@

clean:
	rm -rf $(BINPATH)